generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TxaiUsers {
  id            Int       @id @default(autoincrement())
  email         String    @unique @db.VarChar(255)
  cpf           String    @unique
  password      String    @db.VarChar(255)
  name          String    @db.VarChar(50)
  nameUser      String    @db.VarChar(50)
  administrator Boolean   @default(false)
  photo         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  items         Items[]   @relation("UserItems")
  Session       Session[] @relation("UserItems")

  @@map("txai_users")
}

model Items {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(50)
  value     Decimal
  amount    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      TxaiUsers @relation("UserItems", fields: [userId], references: [id])

  @@map("items")
}

model Session {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      TxaiUsers @relation("UserItems", fields: [userId], references: [id])
  token     String    @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("session")
}
